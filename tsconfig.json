{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "jsx" :  "react",
    "lib": [
      "es2015",
      "es2016.array.include",
      "es2017",
      "dom"
    ],
    "sourceMap": false,
    "resolveJsonModule": true,
    "inlineSources": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "isolatedModules": false,
    "pretty": true,
    "allowJs": true,
    "importHelpers": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**test**"
  ],
  "types": []
}
