{
  "name": "rafalp",
  "version": "4.0.0",
  "description": "Rafal Proszowski - Resume",
  "main": "src/generator.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paroxp/rafalp.git"
  },
  "author": "Rafal Proszowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/paroxp/rafalp/issues"
  },
  "homepage": "https://github.com/paroxp/rafalp#readme",
  "scripts": {
    "build:html": "ts-node src/generator.ts",
    "build:javascript": "tsc src/js/*.ts --outDir dist/js",
    "build:scss": "node-sass --output-style compressed --include-path src/scss --include-path node_modules/susy/sass src/scss/app.scss --output dist/css",
    "build": "npm run -s build:scss && npm run -s build:javascript && npm run -s build:html",
    "fix:ts": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "fix:vulnerabilities": "npm audit fix --update-binary",
    "fix": "npm run -s fix:sass && npm run -s fix:ts",
    "lint:sass": "",
    "lint:ts": "eslint --format codeframe --ext .js,.jsx,.ts,.tsx .",
    "lint": "npm run -s lint:sass && npm run -s lint:ts",
    "start": "http-server ./dist",
    "test:audit": "npm audit",
    "test": "npm run -s lint"
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.2",
    "@types/moment": "^2.13.0",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-plugin-functional": "^3.2.1",
    "eslint-plugin-import": "^2.22.1",
    "html-minifier": "^4.0.0",
    "http-server": "^14.1.1",
    "moment": "^2.29.4",
    "node-sass": "^8.0.0",
    "nodemon": "^3.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sitemap": "^7.0.0",
    "susy": "^3.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
